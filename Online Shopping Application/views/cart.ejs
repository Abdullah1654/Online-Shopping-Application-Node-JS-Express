<h1 class="text-3xl font-bold text-center mb-8">Your Cart</h1>
<% if (cart.length === 0) { %>
  <p class="text-center text-gray-600">Your cart is empty.</p>
<% } else { %>
  <div class="bg-white p-6 rounded-lg shadow-md">
    <% cart.forEach(item => { %>
      <div class="flex justify-between items-center mb-4 border-b pb-4">
        <div>
          <h2 class="text-lg font-semibold"><%= item.name %></h2>
          <p class="text-gray-600">$<%= item.price.toFixed(2) %></p>
        </div>
        <form action="/cart/remove" method="POST">
          <input type="hidden" name="productId" value="<%= item.id %>">
          <button type="submit" class="text-red-600 hover:text-red-800">Remove</button>
        </form>
      </div>
    <% }) %>
    <p class="text-xl font-bold">Total: $<%= cart.reduce((sum, item) => sum + item.price, 0).toFixed(2) %></p>
  </div>
<% } %>
<a href="/" class="mt-4 inline-block text-blue-600 hover:underline">Continue Shopping</a>