<div class="bg-white p-6 rounded-lg shadow-md max-w-2xl mx-auto">
  <img src="<%= product.image %>" alt="<%= product.name %>" class="w-full h-64 object-cover rounded-md mb-4">
  <h1 class="text-2xl font-bold mb-2"><%= product.name %></h1>
  <p class="text-gray-600 mb-4">$<%= product.price.toFixed(2) %></p>
  <p class="text-gray-800 mb-4"><%= product.description %></p>
  <form action="/cart/add" method="POST">
    <input type="hidden" name="productId" value="<%= product.id %>">
    <button type="submit" class="bg-green-600 text-white px-4 py-2 rounded hover:bg-green-700">Add to Cart</button>
  </form>
  <a href="/" class="mt-4 inline-block text-blue-600 hover:underline">Back to Home</a>
</div>